log_level = "DEBUG"
bind_addr = "0.0.0.0"
data_dir = "/var/nomad"
datacenter = "us-east-1"
region = "us"
advertise {
  rpc = "{{ ansible_eth0.ipv4.address }}:4647"
}
server {
    enabled = true
    bootstrap_expect = {{ bootstrap_count }}
    retry_join = [{% for node in groups['tag_Role_control_plane'] %}{% if not inventory_hostname == node %}"{{ hostvars[node]['ansible_eth0']['ipv4']['address'] }}:4648"{% if not loop.last %},{% endif %}{% endif %}{% endfor %}]
}
